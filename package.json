{
  "name": "@frova_happy/brush",
  "version": "0.0.8",
  "description": "Una librerÃ­a de canvas universal que funciona tanto en el navegador como en Node.js",
  "module": "./dist/node/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "./web": {
      "types": "./dist/types/web.d.ts",
      "import": "./dist/web/index.js"
    },
    "./node": {
      "types": "./dist/types/node.d.ts",
      "import": "./dist/node/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "node build.mjs",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "dev": "node build.mjs && tsc -p tsconfig.types.json && npm link && cd example/node && npm link @frova_happy/brush && cd ../react && npm link @frova_happy/brush",
    "dev:html": "npm run build && npx http-server@14.1.1 . -p 3000 -o /example/html/index.html",
    "dev:node": "npm run build && cd example/node && node index.js",
    "lint": "biome lint",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "canvas",
    "drawing",
    "graphics",
    "universal",
    "node",
    "browser",
    "2d"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@napi-rs/canvas": "0.1.81",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/node": "24.9.2",
    "esbuild": "0.25.12",
    "rimraf": "6.1.0",
    "typescript": "5.9.3"
  },
  "peerDependencies": {},
  "peerDependenciesMeta": {},
  "engines": {
    "node": ">=16.0.0"
  }
}