{
  "name": "@frova/brush",
  "version": "0.0.1",
  "description": "Una librerÃ­a de canvas universal que funciona tanto en el navegador como en Node.js",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./web": {
      "import": "./dist/esm/web.js",
      "require": "./dist/cjs/web.js",
      "types": "./dist/types/web.d.ts"
    },
    "./node": {
      "import": "./dist/esm/node.js",
      "require": "./dist/cjs/node.js",
      "types": "./dist/types/node.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "echo \"No tests specified\"",
    "lint": "biome lint",
    "prepublishOnly": "npm run build",
    "setup-test-env": "npm run build && npm link && cd example && npm install && npm link brush",
    "test-env": "npm run setup-test-env && cd example && npm start"
  },
  "keywords": [
    "canvas",
    "drawing",
    "graphics",
    "universal",
    "node",
    "browser",
    "2d"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@napi-rs/canvas": "0.1.81",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/node": "24.9.2",
    "rimraf": "6.1.0",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@napi-rs/canvas": "0.1.81"
  },
  "peerDependenciesMeta": {
    "@napi-rs/canvas": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}